<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#f4f6f6">

    <ImageView
        android:id="@+id/graphXmlTitle"
        android:layout_width="match_parent"
        android:layout_height="55dp"
        android:layout_above="@+id/graph"
        android:background="@drawable/graphtitle"/>
    <com.github.mikephil.charting.charts.PieChart
        android:id="@+id/chart1"
        android:layout_width="match_parent"
        android:layout_height="400dp"/>

    <LinearLayout
        android:layout_below="@id/graph"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <Button
            android:id="@+id/pickDate"
            android:background="@drawable/datebutton"
            android:layout_width="match_parent"
            android:layout_height="52dp" />


    </LinearLayout>

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center">

        <Button
            android:id="@+id/circle"
            android:background="@drawable/dounutbutton"
            android:layout_width="125dp"
            android:layout_height="45dp" />

        <Button
            android:id="@+id/bar"
            android:background="@drawable/barbutton"
            android:layout_width="125dp"
            android:layout_height="45dp" />

        <Button
            android:id="@+id/chart"
            android:background="@drawable/chartbutton"
            android:layout_width="125dp"
            android:layout_height="45dp" />


    </LinearLayout>



</LinearLayout>